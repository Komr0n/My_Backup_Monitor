<Window x:Class="BackupMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Backup Monitor" Height="637" Width="1279"
        WindowStartupLocation="CenterScreen" FontSize="18">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button Name="BtnCheckToday" Content="Проверить сегодня" Width="170" Height="34" Margin="10,0,20,0" Click="BtnCheckToday_Click"/>
                <Button Name="BtnCheckPeriod" Content="Проверить период" Width="170" Height="34" Margin="0,0,20,0" Click="BtnCheckPeriod_Click"/>
                <Button Name="BtnAddService" Content="Добавить сервис" Width="150" Height="32" Margin="0,0,20,0" Click="BtnAddService_Click"/>
                <Button Name="BtnEditService" Content="Редактировать сервис" Width="196" Height="32" Margin="0,0,20,0" Click="BtnEditService_Click"/>
                <Button Name="BtnDeleteService" Content="Удалить сервис" Width="150" Height="32" Margin="0,0,20,0" Click="BtnDeleteService_Click"/>
                <Button Name="BtnTelegramSettings" Content="Telegram" Width="120" Height="32" Margin="0,0,20,0" Click="BtnTelegramSettings_Click"/>
                <Button Name="BtnSendReport" Content="Отправить отчёт" Width="150" Height="32" Click="BtnSendReport_Click"/>
            </StackPanel>
            <!-- Управление Windows Service -->
            <StackPanel Orientation="Horizontal" Margin="70,0,0,0">
                <TextBlock Text="Служба:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Name="ServiceStatusText" Text="Не установлена" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                <Button Name="BtnInstallService" Content="Установить службу" Width="140" Height="30" Margin="0,0,5,0" Click="BtnInstallService_Click"/>
                <Button Name="BtnStartService" Content="Запустить" Width="100" Height="30" Margin="0,0,5,0" Click="BtnStartService_Click"/>
                <Button Name="BtnStopService" Content="Остановить" Width="100" Height="30" Margin="0,0,5,0" Click="BtnStopService_Click"/>
                <Button Name="BtnRefreshServiceStatus" Content="Обновить статус" Width="172" Height="30" Click="BtnRefreshServiceStatus_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Таблица сервисов -->
        <DataGrid Name="ServicesDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  RowHeaderWidth="0"
                  MinRowHeight="24"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  SelectionChanged="ServicesDataGrid_SelectionChanged"
                  CanUserResizeColumns="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Status}" Value="FAIL">
                            <Setter Property="Background" Value="#FFF8D8D8"/>
                            <Setter Property="BorderBrush" Value="#FFE57373"/>
                            <Setter Property="Foreground" Value="#FF7A0000"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Status}" Value="OK">
                            <Setter Property="Background" Value="#FFDDF8E3"/>
                            <Setter Property="BorderBrush" Value="#FF7ACB8F"/>
                            <Setter Property="Foreground" Value="#FF0F5A24"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название сервиса" Binding="{Binding Name}" Width="200" CanUserResize="True"/>
                <DataGridTextColumn Header="Путь" Binding="{Binding Path}" Width="500" CanUserResize="True"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="90" CanUserResize="True"/>
                <DataGridTextColumn Header="Детали" Binding="{Binding Details}" Width="465" MinWidth="400" CanUserResize="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextTrimming" Value="None"/>
                            <Setter Property="VerticalAlignment" Value="Top"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Готов" FontSize="14"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
