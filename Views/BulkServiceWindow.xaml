<Window x:Class="BackupMonitor.Views.BulkServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить группу сервисов" Height="700" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <TextBlock Text="Название группы:" Margin="0,0,0,5"/>
            <TextBox Name="TxtGroupName" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Базовый путь к папкам:" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Name="TxtBasePath" Grid.Column="0" Height="25" Margin="0,0,10,0"/>
                <Button Name="BtnBrowse" Content="Обзор..." Grid.Column="1" Width="80" Height="25" Click="BtnBrowse_Click"/>
            </Grid>

            <TextBlock Text="Подпапки (по одной на строку):" Margin="0,0,0,5"/>
            <TextBox Name="TxtChildFolders" Height="140" Margin="0,0,0,5"
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            <Button Name="BtnLoadFolders" Content="Загрузить подпапки из пути" Width="260" Height="25" Margin="0,0,0,10" Click="BtnLoadFolders_Click"/>

            <TextBlock Text="Ключевые слова (через запятую, опционально):" Margin="0,0,0,5"/>
            <TextBox Name="TxtKeywords" Height="60" Margin="0,0,0,10"
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

            <CheckBox Name="ChkUseChildFolderAsKeyword" Content="Использовать имя подпапки как ключевое слово, если Keywords пустые" Margin="0,0,0,10" IsChecked="True"/>

            <TextBlock Text="Маска файлов (например *.bak, опционально):" Margin="0,0,0,5"/>
            <TextBox Name="TxtFileMask" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Режим проверки:" Margin="0,0,0,5"/>
            <ComboBox Name="CmbCheckMode" Height="25" SelectionChanged="CmbCheckMode_SelectionChanged" Margin="0,0,0,10">
                <ComboBoxItem Content="По имени файла (regex)" Tag="NameDate"/>
                <ComboBoxItem Content="По дате файла" Tag="FileTime"/>
            </ComboBox>

            <StackPanel Name="RegexPanel" Margin="0,0,0,10">
                <TextBlock Text="Регулярные выражения для извлечения даты (по одному на строку):" Margin="0,0,0,5"/>
                <TextBox Name="TxtDatePatterns" Height="100"
                         TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <StackPanel Name="FileTimePanel" Margin="0,0,0,10">
                <TextBlock Text="Источник времени файла:" Margin="0,0,0,5"/>
                <ComboBox Name="CmbFileTimeSource" Height="25">
                    <ComboBoxItem Content="LastWriteTime" Tag="LastWriteTime"/>
                    <ComboBoxItem Content="CreationTime" Tag="CreationTime"/>
                </ComboBox>
            </StackPanel>

            <TextBlock Text="Ожидаемый день (0 = сегодня, 1 = вчера):" Margin="0,0,0,5"/>
            <TextBox Name="TxtExpectedDayOffset" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Минимум файлов за день:" Margin="0,0,0,5"/>
            <TextBox Name="TxtMinFilesPerDay" Height="25" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="BtnSave" Content="Сохранить" Width="100" Height="30" Margin="0,0,10,0" Click="BtnSave_Click"/>
                <Button Name="BtnCancel" Content="Отмена" Width="100" Height="30" Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
