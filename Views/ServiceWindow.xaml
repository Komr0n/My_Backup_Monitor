<Window x:Class="BackupMonitor.Views.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройка сервиса" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Название сервиса -->
        <Label Grid.Row="0" Content="Название сервиса:" Margin="0,0,0,5"/>
        <TextBox Name="TxtServiceName" Grid.Row="1" Margin="0,0,0,15" Height="25"/>

        <!-- Путь к папке -->
        <Label Grid.Row="2" Content="Путь к папке с бэкапами:" Margin="0,0,0,5"/>
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="TxtPath" Grid.Column="0" Height="25" Margin="0,0,10,0"/>
            <Button Name="BtnBrowse" Content="Обзор..." Grid.Column="1" Width="80" Height="25" Click="BtnBrowse_Click"/>
        </Grid>

        <!-- Ключевые слова -->
        <Label Grid.Row="4" Content="Ключевые слова (через запятую):" Margin="0,0,0,5"/>
        <TextBox Name="TxtKeywords" Grid.Row="5" Margin="0,0,0,15" Height="60" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <!-- Регулярные выражения -->
        <Label Grid.Row="6" Content="Регулярные выражения для извлечения даты (по одному на строку):" Margin="0,0,0,5"/>
        <TextBox Name="TxtDatePatterns" Grid.Row="7" Margin="0,0,0,15" Height="100" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="BtnSave" Content="Сохранить" Width="100" Height="30" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Name="BtnCancel" Content="Отмена" Width="100" Height="30" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

